<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
          <h4>Pendaftaran telah diterima mohon tunggu instruksi selanjutnya</h4>
            <h4>Daftar Siswa</h4>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">No.</th>
                    <th scope="col">Nama</th>
                    <th scope="col">Alamat</th>
                    <th scope="col">Kelas</th>
                    <th scope="col">Aksi</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (contacts.length === 0) { %>
                    <div class="alert alert-danger fw-bold" role="alert">
                      Data contact masih kosong.
                      </div>
                    <% } %>

                  <% contacts.forEach((contact, i) => { i++ %>
                   
                  <tr>
                    <th scope="row"><%= i++ %></th>
                    <td><%= contact.nama %></td>
                    <td><%= contact.alamat %></td>
                    <td><%= contact.kelas %></td>
                    <td>
                        <a href="/contact/<%= contact.nama %>  " class="btn badge rounded-pill btn-success">detail</a>
                    </td>
                  </tr>

                  <% }) %>
                
                  
                </tbody>
              </table>

        </div>
    </div>
</div>
